FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      populationaBalanceProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

populationBalanceModel univariatePopulationBalance;

univariatePopulationBalanceCoeffs
{
    diffusionModel
    {
        diffusionModel none;
    }

    aggregation on;

    aggregationKernel
    {
        aggregationKernel differentialForce;

        Ca        Ca        [ 0 0 -1 0 0 0 0 ] 1.0;
    }

    breakup on;

    breakupKernel
    {
        breakupKernel powerLaw;
        Cb        Cb        [ 0 0 -1 0 0 0 0 ] 0.01;
        abscissaExponent 6;
    }

    daughterDistribution
    {
        daughterDistribution uniform;
    }

    growth off;

    growthModel
    {
        growthModel constant;

        Cg        Cg        [0 3 -1 0 0 0 0 ] 1.0;
    }
    
    ode off;
    
    odeCoeffs
    {
        ATol    1.0e-10;
        RTol    1.0e-8;
        fac     0.8;
        facMin  1e-2;
    }
}





