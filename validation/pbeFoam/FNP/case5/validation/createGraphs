# Script
#     createGraphs
#
# Description
#     Creates .eps graph of d43 = moment.4/moment.3 comparing OpenQBMM results,
#     Madadi and Passalacqua (2015) EQMOM solution, and Vanni (2000) rigorous
#     solution.
#
#------------------------------------------------------------------------------

createEpsD43()
{
    openqbmmM0=$1
    openqbmmM1=$2
    openqbmmM2=$3
    openqbmmM3=$4
    openqbmmM4=$5

    gnuplot<<EOF
    set terminal postscript eps enhanced color font 'Helvetica,24' linewidth 2
    set output "OpenQBMM_validation_d43$i.eps"
    set xlabel "Time, t / [s]"
    set ylabel "d_{43} / [{/Symbol m}m]"
    set grid
    set key right top
    set logscale x
    set size 1,1
    plot \
        '< paste $openqbmmM0 $openqbmmM1' using 1:(\$2/(3*\$4*\$4)) title "Moment.0", \
        '< paste $openqbmmM1 $openqbmmM1' using 1:(\$2/(3*\$4*\$4)) title "Moment.1", \
        '< paste $openqbmmM2 $openqbmmM1' using 1:(\$2/(3*\$4*\$4)) title "Moment.2", \
        '< paste $openqbmmM3 $openqbmmM1' using 1:(\$2/(3*\$4*\$4)) title "Moment.3", \
        '< paste $openqbmmM4 $openqbmmM1' using 1:(\$2/(3*\$4*\$4)) title "Moment.4", \


EOF
}

# test if gnuplot exists on the system
if ! which gnuplot > /dev/null 2>&1
then
    echo "gnuplot not found - skipping graph creation" >&2
    exit 1
fi

PROBESDIR="../postProcessing/probes"

if [ ! -d $PROBESDIR ]
then
    echo "createGraphs: results sets not available in directory $SETSDIR"
    exit 0
fi

# paths to data
LATESTTIME=`ls $SETSDIR`
OPENQBMMDATAROOT=$PROBESDIR/0
VERIFICATIONDATAROOT=./verificationData
VALIDATIONDATAROOT=./validationData

echo "    processing d43 profile" > log.createGraphs 2>&1
OPENQBMMM0="$OPENQBMMDATAROOT/moment.0.populationBalance"
OPENQBMMM1="$OPENQBMMDATAROOT/moment.1.populationBalance"
OPENQBMMM2="$OPENQBMMDATAROOT/moment.2.populationBalance"
OPENQBMMM3="$OPENQBMMDATAROOT/moment.3.populationBalance"
OPENQBMMM4="$OPENQBMMDATAROOT/moment.4.populationBalance"

createEpsD43 $OPENQBMMM0 $OPENQBMMM1 $OPENQBMMM2 $OPENQBMMM3 $OPENQBMMM4

echo Done

#------------------------------------------------------------------------------
