FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 296.15;

boundaryField
{
    "inletX.*"
    {
        type            fixedValue;
        value           uniform 296.5;
    }
    "inletY.*"
    {
        type            fixedValue;
        value           uniform 296.15;
    }
    outlet
    {
        type            zeroGradient;
    }
    walls
    {
        type            zeroGradient;
    }
}


